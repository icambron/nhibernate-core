<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   namespace="NHibernate.Test.Join"
				   assembly="NHibernate.Test"
>
	<class name="Candidate" table="candidate">

		<id name="Id" column="candidate_id" unsaved-value="0">
			<generator class="native"/>
		</id>

		<property name="Name" not-null="true" length="80"/>

		<bag name="Jobs" generic="true" cascade="all" inverse="true">
			<key>
				<column name="candidate_id"/>
			</key>
			<one-to-many class="Job" />
		</bag>

		<join table="candidate_email">
			<key column="candidate_email_id"/>
			<property name="Email"/>
		</join>

	</class>

	<class name="Job" table="job" lazy="true">

		<id name="Id" column="job_id" unsaved-value="0">
			<generator class="native"/>
		</id>

		<property name="Name" not-null="true" length="80"/>

		<many-to-one name="Candidate" column="candidate_id"/>

		<join table="job_time_range">
			<key column="job_time_id"/>
			<property name="Start"/>
			<property name="Finish"/>
		</join>

	</class>
</hibernate-mapping>